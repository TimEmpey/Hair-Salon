@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>@Model.Name Record</h1>
<hr />
<h1>@Html.DisplayFor(model => model.Name)</h1>
<p>@Html.DisplayNameFor(model => model.Regular): @Html.DisplayFor(model => model.Regular)</p>
<p>@Html.DisplayNameFor(model => model.Last): @Html.DisplayFor(model => model.Last)</p>
<p>@Html.DisplayNameFor(model => model.Total): @Html.DisplayFor(model => model.Total)</p>
<p>Stylist: @Html.DisplayFor(model => model.Stylist.Name)</p>

<button>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</button>
<button>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</button>
<button>@Html.ActionLink("Back to Clients", "Index")</button>