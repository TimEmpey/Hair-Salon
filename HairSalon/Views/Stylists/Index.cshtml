@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Stylists</h3>
  } 
      @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Index", "Clients")</li>
    }

  <button>@Html.ActionLink("Add Stylist", "Create")</button>
  <button>@Html.ActionLink("Home", "Index", "Home")</button>
