@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add Stylist</h1>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name"})
  <button type="submit" class="btn btn-outline-info add">Add</button>
}
<button class="btn btn-outline-info show">@Html.ActionLink("Show all cuisines", "Index")</button>